extends layouts/main-layout.pug

block styles 
    link(rel="stylesheet", href="/css/product.css")

block content 
    main
        .grid
            if prods.length > 0
                each product in prods
                    article.card.product-items
                        header.card__headere 
                            h1.product__title #{product.title} 
                    div.card__image 
                        img(src="https://img.freepik.com/premium-photo/opened-book-with-flying-pages-butterflies-dark-backgroundgenerative-ai_391052-12859.jpg", alt="A Book")
                    div.card__content 
                        h2.product__price $19.99
                        p.product__description A very interesting book about so many even more interesting things! 
                    .card__actions
                        button.btn Add to Cart
            else
                h1 No Products